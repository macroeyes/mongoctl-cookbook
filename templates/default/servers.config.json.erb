[
    {
        "_id": "mongodb",

        "description": "mongodb server (single mongod)",

        "address": "localhost",
        "cmdOptions": {
            "port": 27017,
            "dbpath": "<%= @dbpath %>",
            "logpath": "<%= @logpath %>",
            "logappend": true,
            "profile": "1",
            "slowms": "100",
            "quiet": true
        }
    },

    {
        "_id": "mongodb-cluster-1",

        "description": "mongodb-cluster member (primary)",

        "address": "localhost",
        "cmdOptions": {
            "port": 37017,
            "dbpath": "<%= @dbpath %>",
            "logpath": "<%= @logpath %>",
            "logappend": true,
            "profile": "1",
            "slowms": "100",
            "quiet": true
        }
    },

    {
        "_id": "mongodb-cluster-2",

        "description": "mongodb-cluster member (secondary)",

        "address": "localhost",
        "cmdOptions": {
            "port": 37027,
            "dbpath": "<%= @dbpath %>.secondary",
            "logpath": "<%= @logpath %>",
            "logappend": true,
            "profile": "1",
            "slowms": "100",
            "quiet": true
        }
    },

    {
        "_id": "mongodb-cluster-arbiter",

        "description": "mongodb-cluster arbiter",

        "address": "localhost",
        "cmdOptions": {
            "port": 37037,
            "dbpath": "<%= @dbpath %>.arbiter",
            "logpath": "<%= @logpath %>",
            "logappend": true,
            "nojournal": true,
            "slowms": "100",
            "quiet": true
        }
    }
]
